{
    "name": "drupol/views_field_formatter",
    "description": "Provide a new field formatter: 'View' for each field types and allows you to select a View and to use its result instead of the original field value.",
    "type": "drupal-module",
    "license": "GPL-2.0+",
    "homepage": "https://drupal.org/project/views_field_formatter",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "require": {
        "PHP": ">=7.1"
    },
    "suggest": {
        "drupal/token": "Provides much more tokens and a very nice UI."
    },
    "require-dev": {
        "behat/mink": "1.7.x-dev",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "1.3.x-dev",
        "composer/installers": "~1.5",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5.2",
        "drupal/coder": "^8.3",
        "drupal/config_split": "^1.4",
        "drupal/console": "^1",
        "drupal/core": "8.7.x-dev",
        "drupal/ctools": "^3.0",
        "drupal/devel": "^1.2",
        "drupal/drupal-extension": "^4.0.0@alpha",
        "drupal/paragraphs": "^1.5",
        "drupal/token": "^1.5",
        "drupal/vardumper": "^1.4",
        "drush/drush": "~9.0@stable",
        "friendsofphp/php-cs-fixer": "^2.13",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "nikic/php-parser": "~3.0",
        "nuvoleweb/robo-config": "~0.1",
        "openeuropa/task-runner": "dev-master",
        "phpmd/phpmd": "^2.6",
        "phpro/grumphp": "^0.14.2",
        "phpspec/prophecy": "^1.4",
        "phpunit/phpunit": "^6.5",
        "symfony/browser-kit": "~3.0||~4.0",
        "symfony/css-selector": "^3.4.0",
        "symfony/debug": "^3.4.0",
        "symfony/phpunit-bridge": "^3.4.3",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "post-update-cmd": "./vendor/bin/run drupal:site-setup",
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "grumphp": "./vendor/bin/grumphp run"
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "patches": {
            "drupal/core": {
                "https://www.drupal.org/project/drupal/issues/2943172": "https://www.drupal.org/files/issues/2018-07-05/2943172-kernel-test-base-3.patch",
                "https://www.drupal.org/project/drupal/issues/2599228": "https://www.drupal.org/files/issues/2018-10-01/2599228-SQL_error_on_content_creation-78_0.patch",
                "https://www.drupal.org/project/drupal/issues/2571475": "https://www.drupal.org/files/issues/outbound_http_requests-2571475-10.patch"
            }
        },
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"]
        }
    },
    "config": {
        "sort-packages": true
    }
}
